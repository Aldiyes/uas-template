generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  name     String?
  email    String?  @unique
  password String?
  role     UserRole @default(USER)
  image    String?
  todos    Todos[]

  @@map("users")
}

enum UserRole {
  ADMIN
  USER
}

model Todos {
  id     String @id @default(cuid())
  title  String
  todo   Todo[]
  userId String
  user   User   @relation(fields: [userId], references: [id])
}

model Todo {
  id      String @id @default(cuid())
  title   String
  todosId String
  todos   Todos  @relation(fields: [todosId], references: [id])
}
